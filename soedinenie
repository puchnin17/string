#include <iostream>

// Соединение двух строк
std::string concatenateStrings(const std::string& str1, const std::string& str2, int& index1, int& index2) {
    index1 = str1.size(); // Индекс, на котором начинается вторая строка
    index2 = index1 + str2.size(); // Индекс, на котором заканчивается вторая строка
    return str1 + str2; // Используем оператор + для конкатенации строк
}

int main() {
    const std::string str1 = "Привет, ";
    const std::string str2 = "мир!";
    int index1, index2;

    std::string concatenated = concatenateStrings(str1, str2, index1, index2);

    std::cout << "Результат: " << concatenated << std::endl;
    std::cout << " начинается с индекса " << index1 << " и заканчивается индексом " << index2 << std::endl;

    return 0;
}
