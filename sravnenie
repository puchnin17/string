#include <iostream>
// сравнение строк
bool sravnivanieStrok(const char* str1, const char* str2) {
    int i = 0;
    while (str1[i] != '\0' && str2[i] != '\0') {
        if (str1[i] != str2[i]) {
            return false; // Строки различаются
        }
        i++;
    }

    // Если оба цикла завершились без возврата false, то строки считаются равными,
    // но проверьте длину, чтобы удостовериться, что они одинаковой длины.
    return str1[i] == '\0' && str2[i] == '\0';
}

int main() {
    const char* str1 = "Привет";
    const char* str2 = "Привет";

    if (sravnivanieStrok(str1, str2)) {
        std::cout << "Строки равны." << std::endl;
    } else {
        std::cout << "Строки различаются." << std::endl;
    }

    return 0;
}
